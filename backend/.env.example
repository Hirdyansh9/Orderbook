# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/orderbook

# JWT Secret - MUST be a strong, random string in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# Server Configuration
PORT=5001
NODE_ENV=development

# CORS Configuration (comma-separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10

# NOTE: In production:
# - Use strong, randomly generated secrets (min 64 characters)
# - Set NODE_ENV=production
# - Use HTTPS only
# - Configure proper CORS origins
# - Increase BCRYPT_ROUNDS to 12
# - Use environment-specific MongoDB URI with authentication

